<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#722">

    <TextView android:text="你好" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/n"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:textSize="25dp"
        android:textColor="#999"/>

    <AnalogClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/analogClock"
        android:layout_below="@+id/n"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radio"
        android:id="@+id/radioButton"
        android:textColor="#990"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/analogClock"
        android:layout_toEndOf="@+id/analogClock" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:layout_above="@+id/radioButton"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/abc_ic_menu_cut_mtrl_alpha"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/et"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#DDDDDD"
        android:text="请输入您的名字"
        android:id ="@+id/et"
        android:maxLength = "10"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"></EditText>



</RelativeLayout>
